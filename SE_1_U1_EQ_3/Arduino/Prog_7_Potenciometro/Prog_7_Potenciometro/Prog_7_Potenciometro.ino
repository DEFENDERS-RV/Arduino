int pot = A0; //LOS POTENCIOMETROS SON DISPOSITIVOS ANALOGICOS , POR LO QUE REQUIEREN CONECTARSE A UN PIN ANALOGICO
//EN ARDUINO , LOS PINES ANALOGICOS SON LOS QUE SE ENCUENTRAN SEÃ‘ALADOS CON UN "A"

void setup() {
  // LOS PINES ANALOGICOS NO REQUIEREN QUE SE ESTABLEZCA EL MODO DE TRABAJO
  Serial.begin(9600);
}

int valor;
void loop() { //16Mhz
  // LOS PINES ANALOGICOS SOLAMENTE FUNCIONAN COMO ENTRADAS ...
  valor = analogRead(pot); //ADC = > 10bits de RESOLUCION Y TRABAJA CON 5V DE REFERENCIA
  //ESTO SIGNIFCA QUE CUENTA CON 1024 VALORES = > 0 - 1023
  Serial.println(pot);

  delay(500); //500 MILISEGUNDOS


  
}
